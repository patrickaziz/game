html

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Science Quest: STAAR Galaxy - Density Dash</title>
    <style>
        body {
            margin: 0;
            overflow: hidden;
            background: #1a1a2e;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: Arial, sans-serif;
        }
        #gameCanvas {
            border: 2px solid #fff;
            background: #16213e;
        }
        #quiz {
            position: absolute;
            top: 20px;
            left: 20px;
            color: white;
            background: rgba(0, 0, 0, 0.7);
            padding: 10px;
            display: none;
        }
        #score {
            position: absolute;
            top: 20px;
            right: 20px;
            color: white;
            font-size: 20px;
        }
    </style>
</head>
<body>
    <canvas id="gameCanvas" width="800" height="600"></canvas>
    <div id="quiz">
        <p id="question"></p>
        <button onclick="checkAnswer('yes')">Yes</button>
        <button onclick="checkAnswer('no')">No</button>
    </div>
    <div id="score">Score: 0</div>

    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const quiz = document.getElementById('quiz');
        const question = document.getElementById('question');
        const scoreDisplay = document.getElementById('score');

        // Game variables
        let player = { x: 50, y: 500, width: 40, height: 40, speed: 5, vy: 0, jumping: false };
        let objects = [
            { x: 200, y: 500, width: 30, height: 30, type: 'feather', sinks: false },
            { x: 300, y: 500, width: 30, height: 30, type: 'rock', sinks: true },
            { x: 400, y: 500, width: 30, height: 30, type: 'wood', sinks: false }
        ];
        let platforms = [
            { x: 0, y: 540, width: 800, height: 60 },
            { x: 600, y: 400, width: 200, height: 20 }
        ];
        let goal = { x: 700, y: 360, width: 40, height: 40 };
        let score = 0;
        let gameOver = false;
        let keys = {};

        // Event listeners for keyboard
        window.addEventListener('keydown', (e) => keys[e.key] = true);
        window.addEventListener('keyup', (e) => keys[e.key] = false);

        // Game loop
        function update() {
            if (gameOver) return;

            // Player movement
            if (keys['ArrowLeft']) player.x -= player.speed;
            if (keys['ArrowRight']) player.x += player.speed;
            if (keys['ArrowUp'] && !player.jumping) {
                player.vy = -15;
                player.jumping = true;
            }
            if (keys[' ']) interact();

            // Gravity and collision
            player.vy += 0.8; // Gravity
            player.y += player.vy;
            for (let platform of platforms) {
                if (player.x + player.width > platform.x && player.x < platform.x + platform.width &&
                    player.y + player.height > platform.y && player.y + player.height - player.vy <= platform.y) {
                    player.y = platform.y - player.height;
                    player.vy = 0;
                    player.jumping = false;
                }
            }
            if (player.y > canvas.height - player.height) {
                player.y = canvas.height - player.height;
                player.vy = 0;
                player.jumping = false;
            }
            if (player.x < 0) player.x = 0;
            if (player.x + player.width > canvas.width) player.x = canvas.width - player.width;

            // Check goal
            if (player.x + player.width > goal.x && player.x < goal.x + goal.width &&
                player.y + player.height > goal.y && player.y < goal.y + goal.height) {
                showQuiz();
            }

            draw();
            requestAnimationFrame(update);
        }

        // Interaction with objects
        function interact() {
            for (let i = objects.length - 1; i >= 0; i--) {
                let obj = objects[i];
                if (Math.abs(player.x - obj.x) < 50 && Math.abs(player.y - obj.y) < 50) {
                    if (obj.sinks) {
                        obj.y += 5; // Sink
                        if (obj.y > canvas.height) {
                            objects.splice(i, 1);
                            score += 10;
                        }
                    } else {
                        obj.y -= 5; // Float
                        if (obj.y < 0) {
                            objects.splice(i, 1);
                            score += 10;
                        }
                    }
                }
            }
            scoreDisplay.textContent = `Score: ${score}`;
        }

        // Drawing the game
        function draw() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            // Draw platforms
            ctx.fillStyle = '#0f3460';
            for (let platform of platforms) {
                ctx.fillRect(platform.x, platform.y, platform.width, platform.height);
            }

            // Draw player
            ctx.fillStyle = '#e94560';
            ctx.fillRect(player.x, player.y, player.width, player.height);

            // Draw objects
            for (let obj of objects) {
                ctx.fillStyle = obj.sinks ? '#53354a' : '#f7d794';
                ctx.fillRect(obj.x, obj.y, obj.width, obj.height);
                ctx.fillStyle = 'white';
                ctx.font = '12px Arial';
                ctx.fillText(obj.type, obj.x, obj.y - 5);
            }

            // Draw goal
            ctx.fillStyle = '#00ff00';
            ctx.fillRect(goal.x, goal.y, goal.width, goal.height);
        }

        // Quiz functionality
        function showQuiz() {
            quiz.style.display = 'block';
            question.textContent = 'Does a rock have greater density than a feather?';
            gameOver = true;
        }

        function checkAnswer(answer) {
            if (answer === 'yes') {
                score += 20;
                alert('Correct! Rocks sink because they have higher density.');
            } else {
                alert('Oops! Rocks have greater density than feathers and sink.');
            }
            scoreDisplay.textContent = `Score: ${score}`;
            quiz.style.display = 'none';
            alert(`Game Over! Final Score: ${score}`);
        }

        // Start the game
        update();
    </script>
</body>
</html>

